<Window x:Class="Words_Tests.QuestionImageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Words_Tests"
        mc:Ignorable="d"
        Title="Question Image" Height="450" Width="800">
    <DockPanel>
        <TextBlock Text="Select Image" DockPanel.Dock="Top" FontSize="32" HorizontalAlignment="Center" />
        <Grid x:Name="ImagesGrid">
            <Grid.Resources>
                <Style TargetType="Border">
                    <Setter Property="VerticalAlignment" Value="Center" />
                    <Setter Property="Padding" Value="8" />
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource 
                                {x:Static SystemColors.HighlightBrushKey}}" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Grid.Resources>
        </Grid>
    </DockPanel>
</Window>
